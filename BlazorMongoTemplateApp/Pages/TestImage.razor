@page "/TestImage"
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable




@if (string.IsNullOrEmpty(Error))
{
    <div class="row">
        <div class="col-4">
            <div class="alert-danger">
                @Error
            </div>
        </div>
    </div>
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h3>Drag and drop file max 512</h3>
        <br/>
        <div @ref="dropZoneElement" class="drop-zone">
            <p>Drop a file or paste an image from the clipboard or select a file using the input</p>
            <InputFile OnChange="@OnUploadFileMax512" @ref="inputFile"/>
        </div>
        <br/>
        <button class="btn btn-warning" @onclick="(() => DownloadFile(FileMax512.Id))">download</button>
    </div>
    <div class="col-6">
        <h3>Drag and drop file</h3>
        <br/>
        <div @ref="dropZoneElement" class="drop-zone">
            <p>Drop a file or paste an image from the clipboard or select a file using the input</p>
            <InputFile OnChange="@OnUploadFile" @ref="inputFile"/>
        </div>
        <br/>
        <button class="btn btn-warning" @onclick="(() => DownloadFile(Fichier.Id))">download</button>
    </div>
</div>