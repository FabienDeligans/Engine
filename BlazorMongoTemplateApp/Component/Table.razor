@typeparam T

<div class="container-fluid">
    <div class="row">
        <input type="text" class="form-control col-4" @bind-value="Filter" @bind-value:event="oninput" @onkeyup="Search" placeholder="Search" />
        <button class="btn btn-info col-2" @onclick="Clear">Clear</button>
    </div>
</div>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            @Header
        </tr>
    </thead>
    <tbody>
        @*@foreach (var row in Items)
            {*@

        <Virtualize ItemsProvider="@LoadItems" @ref="virtualizeComponent">
            <tr>@Row(context)</tr>
        </Virtualize>

        @*}*@
    </tbody>
</table>